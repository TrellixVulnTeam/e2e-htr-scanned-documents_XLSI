{
  "name": "otf-iam-print-L",
  "dataset": "iam-print1-L",
  "algorithm": "htrnet",
  "save": 25,
  "batch": 10,
  "epochs": 1000,
  "max_batches": 0,
  "learning_rate": 0.0003,
  "class_learning_rate": 0.0001,
  "ctc": "greedy",
  "data_config": {
    "dynamic_width": false,
    "shuffle_epoch": true,
    "sort_by_width": false,
    "otf_augmentations": {
      "affine": {},
      "warp": {
            "prob": 0.5,
            "deviation": 2.7,
            "gridsize": [30, 30]
      }
    }
  },
  "algo_config": {
    "format": "nchw",
    "dynamic_width": false,
    "brnn": {
    	"units": 512
    },
    "encoder": {
      "type": "cnn",
      "cnn": {      
	"size": 32,
        "bias": true,
        "dropout": {
          "active": true
        },
        "bnorm": {
          "active": true,
          "train": true,
          "before_activation": true
        }
      }
    },
    "classifier": {
      "units": [512]
    },
    "fc": {
      "use_activation": false
    },
    "optimizer": "adam"
  }
}
