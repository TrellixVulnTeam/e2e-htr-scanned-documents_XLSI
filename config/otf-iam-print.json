{
  "name": "otf-iam-print",
  "dataset": "iam-print1",
  "algorithm": "htrnet",
  "save": 5,
  "batch": 50,
  "epochs": 300,
  "max_batches": 0,
  "learning_rate": 0.0003,
  "class_learning_rate": 0.0001,
  "ctc": "greedy",
  "data_config": {
    "dynamic_width": false,
    "shuffle_epoch": true,
    "sort_by_width": false,
    "otf_augmentations": {
      "warp": {
        "prob": 0.95,
        "gridsize": [20, 20],
        "deviation": 2.0
      },
      "morph": {
        "prob": 0.5,
        "ops": [
          { "name": "thin", "values": [1, 4] },
          { "name": "thicken", "values": [1, 4] }
        ]
      }
    }
  },
  "algo_config": {
    "format": "nchw",
    "dynamic_width": false,
    "encoder": {
      "type": "cnn",
      "cnn": {
        "bias": true,
        "dropout": {
          "active": true
        },
        "bnorm": {
          "active": true,
          "train": true,
          "before_activation": true
        }
      }
    },
    "classifier": {
      "units": [512]
    },
    "fc": {
      "use_activation": false
    },
    "optimizer": "adam"
  }
}
