{
  "name": "otf-iam-both",
  "dataset": "iam-both1",
  "algorithm": "htrnet",
  "save": 25,
  "batch": 50,
  "epochs": 1000,
  "max_batches": 0,
  "learning_rate": 0.0003,
  "class_learning_rate": 0.0001,
  "ctc": "greedy",
  "data_config": {
    "dynamic_width": false,
    "shuffle_epoch": true,
    "sort_by_width": false,
    "otf_augmentations": {
      "affine": {},
      "warp": {
        "prob": 0.5,
        "deviation": 1.35,
        "gridsize": [15, 15]
      }
    }
  },
  "algo_config": {
    "format": "nchw",
    "dynamic_width": false,
    "encoder": {
      "type": "cnn",
      "cnn": {
        "bias": true,
        "dropout": {
          "active": true
        },
        "bnorm": {
          "active": true,
          "train": true,
          "before_activation": true
        }
      }
    },
    "classifier": {
      "units": [512]
    },
    "fc": {
      "use_activation": false
    },
    "optimizer": "adam"
  }
}
