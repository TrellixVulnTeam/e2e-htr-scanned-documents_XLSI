{
  "name": "pc-iam-m",
  "dataset": "iam-lines-m",
  "algorithm": "puigcerver",
  "save": 5,
  "batch": 50,
  "epochs": 300,
  "max_batches": 0,
  "learning_rate": 0.0003,
  "ctc": "greedy",
  "algo_config": {
    "format": "nchw",
    "conv": {
      "kernel": [4,4],
      "pooling": [[2, 2], [2, 2], [1, 2]],
      "bias": true,
      "dropout": {
      	"active": true
      }
    },
    "fc": {
      "use_activation": false
    },
    "optimizer": "adam",
    "bnorm": {
      "active": true,
      "train": true,
      "before_activation": true
    }
  }
}
